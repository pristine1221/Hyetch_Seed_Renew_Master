<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp"
        android:orientation="vertical">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow>


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:fontFamily="@font/product_sans_bold"
                    android:text="Code: "
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/travel_code"
                    style="@style/TextAppearance.MaterialComponents.Subtitle2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:fontFamily="@font/product_sans_regular"
                    android:textSize="12sp" />


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:fontFamily="@font/product_sans_bold"
                    android:text="From: "
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_start_date"
                    style="@style/TextAppearance.MaterialComponents.Subtitle2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:fontFamily="@font/product_sans_regular"
                    android:textSize="12sp" />
            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:fontFamily="@font/product_sans_bold"
                    android:text="To: "
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_end_date"
                    style="@style/TextAppearance.MaterialComponents.Subtitle2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:fontFamily="@font/product_sans_regular"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:fontFamily="@font/product_sans_bold"
                    android:text="Tpe: "
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_expense_budget"
                    style="@style/TextAppearance.MaterialComponents.Subtitle2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:fontFamily="@font/product_sans_regular"
                    android:textSize="12sp" />
            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.085"
                    android:fontFamily="@font/product_sans_bold"
                    android:text="Desc: "
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_travel_reson"
                    style="@style/TextAppearance.MaterialComponents.Subtitle2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:fontFamily="@font/product_sans_regular"
                    android:textSize="12sp" />
            </TableRow>
        </TableLayout>

        <LinearLayout
            android:id="@+id/lineylayouAddRemove"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-10dp"
            android:gravity="bottom|end"
            android:paddingBottom="2dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_travel_status"
                style="@style/TextAppearance.MaterialComponents.Caption"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="bottom|end"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:fontFamily="@font/product_sans_regular"
                android:textSize="10sp" />

            <ImageView
                android:id="@+id/approve_order"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="15dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:src="@drawable/approve_order_icon"></ImageView>

            <ImageView
                android:id="@+id/reject_order"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="5dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:src="@drawable/approve_order_reject_icon"></ImageView>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

