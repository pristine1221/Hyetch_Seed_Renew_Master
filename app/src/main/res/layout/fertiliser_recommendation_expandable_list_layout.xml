<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/gray4"
    android:layout_height="wrap_content">


        <TableLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:padding="5dp"
            android:layout_height="wrap_content">

            <TableRow
                android:layout_width="match_parent"
                android:padding="2dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="dose of Ferti. :"
                    android:fontFamily="@font/product_sans_bold"
                    android:textColor="@color/profileEditTextColor"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_Recommended_dose_of_Fertilizer"
                    android:layout_weight="0.5"
                    android:textSize="12sp"
                    android:layout_width="0dp"
                    android:fontFamily="@font/product_sans_regular"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="Fertiliser in bags :"
                    android:fontFamily="@font/product_sans_bold"
                    android:textColor="@color/profileEditTextColor"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_Recommend_dose_of_Fertiliser_in_bags"
                    android:layout_weight="0.5"
                    android:textSize="12sp"
                    android:layout_width="0dp"
                    android:fontFamily="@font/product_sans_regular"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content"/>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:padding="2dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="Basal Dose :"
                    android:fontFamily="@font/product_sans_bold"
                    android:textColor="@color/profileEditTextColor"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_Basal_Dose"
                    android:layout_weight="0.5"
                    android:textSize="12sp"
                    android:layout_width="0dp"
                    android:fontFamily="@font/product_sans_regular"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="Basal Dose Bags :"
                    android:fontFamily="@font/product_sans_bold"
                    android:textColor="@color/profileEditTextColor"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_Basal_Dose_Bags"
                    android:layout_weight="0.5"
                    android:textSize="12sp"
                    android:layout_width="0dp"
                    android:fontFamily="@font/product_sans_regular"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content"/>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:padding="2dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="Top Dressing :"
                    android:fontFamily="@font/product_sans_bold"
                    android:textColor="@color/profileEditTextColor"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_Top_Dressing"
                    android:layout_weight="0.5"
                    android:textSize="12sp"
                    android:layout_width="0dp"
                    android:fontFamily="@font/product_sans_regular"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="Dressing Bags :"
                    android:fontFamily="@font/product_sans_bold"
                    android:textColor="@color/profileEditTextColor"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_Top_Dressing_Bags"
                    android:layout_weight="0.5"
                    android:textSize="12sp"
                    android:layout_width="0dp"
                    android:fontFamily="@font/product_sans_regular"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content"/>
            </TableRow>
        </TableLayout>





</LinearLayout>