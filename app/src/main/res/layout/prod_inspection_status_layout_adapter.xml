<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <FrameLayout
            android:id="@+id/circuler_text_section"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:elevation="2dp"
            android:padding="5dp"
            android:layout_margin="2dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/circle_humidity_blue_icon">

            <TextView
                android:id="@+id/tv_character_ofImageView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/my_app_background_color"
                android:textSize="25dp"/>

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:paddingTop="7dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Item : "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/product_sans_regular"
                    android:textColor="@color/dark_gray"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_item_name"
                    android:layout_width="wrap_content"
                    android:fontFamily="@font/product_sans_regular"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text=" , Crop : "
                    android:layout_width="wrap_content"
                    android:fontFamily="@font/product_sans_regular"
                    android:textColor="@color/dark_gray"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_crop"
                    android:layout_width="wrap_content"
                    android:fontFamily="@font/product_sans_regular"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Organiser : "
                    android:layout_width="wrap_content"
                    android:fontFamily="@font/product_sans_regular"
                    android:textColor="@color/dark_gray"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_organiser"
                    android:layout_width="wrap_content"
                    android:fontFamily="@font/product_sans_regular"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Season : "
                    android:layout_width="wrap_content"
                    android:fontFamily="@font/product_sans_regular"
                    android:textColor="@color/dark_gray"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_season"
                    android:layout_width="wrap_content"
                    android:fontFamily="@font/product_sans_regular"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text=" , Sown Area acr : "
                    android:layout_width="wrap_content"
                    android:fontFamily="@font/product_sans_regular"
                    android:textColor="@color/dark_gray"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_sowing_area_In_acres"
                    android:layout_width="wrap_content"
                    android:fontFamily="@font/product_sans_regular"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Production Lot no.: "
                    android:layout_width="wrap_content"
                    android:fontFamily="@font/product_sans_regular"
                    android:textColor="@color/dark_gray"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_production_lot_no"
                    android:layout_width="wrap_content"
                    android:fontFamily="@font/product_sans_regular"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Zone : "
                    android:layout_width="wrap_content"
                    android:fontFamily="@font/product_sans_regular"
                    android:textColor="@color/dark_gray"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_zone"
                    android:layout_width="wrap_content"
                    android:fontFamily="@font/product_sans_regular"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="Flag Status : "
                    android:id="@+id/text_flag_status"
                    android:layout_width="wrap_content"
                    android:fontFamily="@font/product_sans_regular"
                    android:textColor="@color/dark_gray"
                    android:visibility="gone"
                    android:layout_marginLeft="@dimen/_3sdp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_flag_status"
                    android:layout_width="wrap_content"
                    android:visibility="gone"
                    android:fontFamily="@font/product_sans_regular"
                    android:layout_height="wrap_content" />

                <View
                    android:layout_width="@dimen/_58sdp"
                    android:layout_height="7dp"/>

                <TextView
                    android:id="@+id/prod_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_10sdp"
                    android:fontFamily="@font/product_sans_regular"/>

                <TextView
                    android:id="@+id/qa_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/product_sans_regular"/>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


</LinearLayout>
