<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@color/my_app_background_color"
            android:elevation="5dp"
            app:cardCornerRadius="3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/product_sans_bold"
                            android:text="Line No :"
                            android:textColor="@color/profileEditTextColor"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tv_line_no"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/product_sans_regular"
                            android:textColor="@color/black"
                            android:textSize="10sp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/product_sans_bold"
                            android:text="Lot No : "
                            android:textColor="@color/profileEditTextColor"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tv_lot_no"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/product_sans_regular"
                            android:textColor="@color/dark_green"
                            android:textSize="10sp" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/product_sans_bold"
                            android:text="Item No :"
                            android:textColor="@color/profileEditTextColor"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tv_item_no"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/product_sans_regular"
                            android:textColor="@color/black"
                            android:textSize="10sp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/product_sans_bold"
                            android:text="Receipt No: "
                            android:textColor="@color/profileEditTextColor"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tv_receipt_no"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/product_sans_regular"
                            android:textColor="@color/black"
                            android:textSize="10sp" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/product_sans_bold"
                            android:text="Variant Code :"
                            android:textColor="@color/profileEditTextColor"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tv_variant_code"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/product_sans_regular"
                            android:textColor="@color/black"
                            android:textSize="10sp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/product_sans_bold"
                            android:text="Bin Code : "
                            android:textColor="@color/profileEditTextColor"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tv_bin_coe"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/product_sans_regular"
                            android:textColor="@color/black"
                            android:textSize="10sp" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/product_sans_bold"
                            android:text="No Bags :"
                            android:textColor="@color/profileEditTextColor"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tv_no_of_bags"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/product_sans_regular"
                            android:textColor="@color/black"
                            android:textSize="10sp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/product_sans_bold"
                            android:text="Quantity : "
                            android:textColor="@color/profileEditTextColor"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tv_quantity"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/product_sans_regular"
                            android:textColor="@color/black"
                            android:textSize="10sp" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/product_sans_bold"
                            android:text="Measure In:"
                            android:textColor="@color/profileEditTextColor"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tv_measure_in"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/product_sans_regular"
                            android:textColor="@color/black"
                            android:textSize="10sp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/product_sans_bold"
                            android:text="LandIn Acre : "
                            android:textColor="@color/profileEditTextColor"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tv_landIn_acre"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/product_sans_regular"
                            android:textColor="@color/black"
                            android:textSize="10sp" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/product_sans_bold"
                            android:text="Description :"
                            android:textColor="@color/profileEditTextColor"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tv_description"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/product_sans_regular"
                            android:textColor="@color/black"
                            android:textSize="10sp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/product_sans_bold"
                            android:text="Message : "
                            android:textColor="@color/profileEditTextColor"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tv_line_message"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/product_sans_regular"
                            android:textColor="@color/dark_green"
                            android:textSize="10sp" />
                    </TableRow>
                </TableLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</LinearLayout>