<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
<!--
  android:background="@color/my_app_background_color"-->
        <TableLayout
            android:layout_width="match_parent"
            android:background="@drawable/selectable_backgraund"
            android:padding="5dp"
            android:layout_marginBottom="@dimen/_2sdp"
            android:layout_height="wrap_content">

            <TableRow
                android:layout_width="match_parent"
                android:paddingLeft="@dimen/_5sdp"
                android:paddingRight="@dimen/_2sdp"
                android:paddingTop="@dimen/_2sdp"
                android:paddingBottom="@dimen/_2sdp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Prod. lot. :"
                    android:fontFamily="@font/product_sans_bold"
                    android:textColor="@color/profileEditTextColor"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_prod_lot"
                    android:layout_weight="3.0"
                    android:textSize="12sp"
                    android:layout_width="0dp"
                    android:fontFamily="@font/product_sans_regular"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content"/>



            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:paddingLeft="@dimen/_5sdp"
                android:paddingRight="@dimen/_2sdp"
                android:paddingTop="@dimen/_2sdp"
                android:paddingBottom="@dimen/_2sdp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Arrival no. :"
                    android:fontFamily="@font/product_sans_bold"
                    android:textColor="@color/profileEditTextColor"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_arrival_no"
                    android:layout_weight="1"
                    android:textSize="12sp"
                    android:layout_width="0dp"
                    android:fontFamily="@font/product_sans_regular"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Org.name :"
                    android:fontFamily="@font/product_sans_bold"
                    android:textColor="@color/profileEditTextColor"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/organizer_name"
                    android:layout_weight="1"
                    android:textSize="12sp"
                    android:layout_width="0dp"
                    android:fontFamily="@font/product_sans_regular"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content"/>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:paddingLeft="@dimen/_5sdp"
                android:paddingRight="@dimen/_2sdp"
                android:paddingTop="@dimen/_2sdp"
                android:paddingBottom="@dimen/_2sdp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Org. code :"
                    android:fontFamily="@font/product_sans_bold"
                    android:textColor="@color/profileEditTextColor"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/org_code"
                    android:layout_weight="1"
                    android:textSize="12sp"
                    android:layout_width="0dp"
                    android:fontFamily="@font/product_sans_regular"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Grower owner :"
                    android:fontFamily="@font/product_sans_bold"
                    android:textColor="@color/profileEditTextColor"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/grwer_owner"
                    android:layout_weight="1"
                    android:textSize="12sp"
                    android:layout_width="0dp"
                    android:fontFamily="@font/product_sans_regular"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content"/>
            </TableRow>
            <TableRow
                android:visibility="gone">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Scheduler no. :"
                    android:fontFamily="@font/product_sans_bold"
                    android:textColor="@color/profileEditTextColor"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/schedule_no"
                    android:layout_weight="3.0"
                    android:textSize="12sp"
                    android:layout_width="0dp"
                    android:fontFamily="@font/product_sans_regular"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content"/>
            </TableRow>
            <TableRow android:gravity="end"
                android:paddingRight="@dimen/_8sdp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lot status : "
                    android:textStyle="bold"
                    android:textColor="@color/profileEditTextColor"
                    android:textSize="@dimen/_10sdp" />

                <TextView
                    android:id="@+id/tv_status"
                    android:textSize="@dimen/_10ssp"
                    android:layout_width="wrap_content"
                    android:fontFamily="@font/product_sans_bold"
                    android:textColor="@color/colorPrimaryDark"
                    android:paddingLeft="@dimen/_5sdp"
                    android:layout_height="wrap_content"/>

            </TableRow>
        </TableLayout>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:background="@color/gray4"
        android:layout_height="@dimen/_1sdp"/>

</LinearLayout>