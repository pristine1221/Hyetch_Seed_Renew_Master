<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/container_layout"
        android:padding="8dp">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TableRow>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:fontFamily="@font/product_sans_bold"
                    android:textColor="@color/dark_gray"
                    android:textSize="@dimen/_10sdp"
                    android:text="Code: " />

                <TextView
                    android:id="@+id/travel_code"
                    android:layout_width="0dp"
                    android:fontFamily="@font/product_sans_regular"
                    android:textColor="@color/profileEditTextColor"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_10sdp"
                    android:layout_weight="0.5" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:fontFamily="@font/product_sans_bold"
                    android:textColor="@color/dark_gray"
                    android:textSize="@dimen/_10sdp"
                    android:text="From: " />

                <TextView
                    android:id="@+id/tv_from_loc"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/product_sans_regular"
                    android:textColor="@color/profileEditTextColor"
                    android:textSize="@dimen/_10sdp"
                    android:layout_weight="0.5" />
            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:fontFamily="@font/product_sans_bold"
                    android:textColor="@color/dark_gray"
                    android:textSize="@dimen/_10sdp"
                    android:text="To: " />

                <TextView
                    android:id="@+id/tv_to_loc"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/product_sans_regular"
                    android:textColor="@color/profileEditTextColor"
                    android:textSize="@dimen/_10sdp"
                    android:layout_weight="0.5" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:fontFamily="@font/product_sans_bold"
                    android:textColor="@color/dark_gray"
                    android:textSize="@dimen/_10sdp"
                    android:text="Start: " />

                <TextView
                    android:id="@+id/tv_start_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/product_sans_regular"
                    android:textColor="@color/profileEditTextColor"
                    android:textSize="@dimen/_10sdp"
                    android:layout_weight="0.5" />
            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:fontFamily="@font/product_sans_bold"
                    android:textColor="@color/dark_gray"
                    android:textSize="@dimen/_10sdp"
                    android:text="End: " />

                <TextView
                    android:id="@+id/tv_end_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/product_sans_regular"
                    android:textColor="@color/profileEditTextColor"
                    android:layout_weight="0.5" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:fontFamily="@font/product_sans_bold"
                    android:textColor="@color/dark_gray"
                    android:textSize="@dimen/_10sdp"
                    android:text="Budget: " />

                <TextView
                    android:id="@+id/tv_expense_budget"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/product_sans_regular"
                    android:textColor="@color/profileEditTextColor"
                    android:textSize="@dimen/_10sdp"
                    android:layout_weight="0.5" />
            </TableRow>
            <TableRow>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:fontFamily="@font/product_sans_bold"
                    android:textColor="@color/dark_gray"
                    android:textSize="@dimen/_10sdp"
                    android:text="Created: " />

                <TextView
                    android:id="@+id/tv_Created"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/product_sans_regular"
                    android:textColor="@color/profileEditTextColor"
                    android:textSize="@dimen/_10sdp"
                    android:text=""
                    android:layout_weight="0.5" />

                <View
                    android:id="@+id/view_ty"
                    android:visibility="gone"
                    android:layout_width="0dp"
                    android:layout_gravity="center"
                    android:layout_weight="0.8"
                    android:layout_height="@dimen/_1sdp">
                </View>


                <TextView
                    android:id="@+id/tv_app_budget_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:visibility="visible"
                    android:fontFamily="@font/product_sans_bold"
                    android:textColor="@color/dark_gray"
                    android:textSize="@dimen/_10sdp"
                    android:text="Aprv. Rs: " />

                <TextView
                    android:id="@+id/tv_app_budget"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/product_sans_regular"
                    android:textColor="@color/profileEditTextColor"
                    android:textSize="@dimen/_10sdp"
                    android:layout_weight="0.5" />
            </TableRow>
            <TableRow>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.11"
                    android:fontFamily="@font/product_sans_bold"
                    android:textColor="@color/dark_gray"
                    android:textSize="@dimen/_10sdp"

                    android:text="Reson: " />

                <TextView
                    android:id="@+id/tv_travel_reson"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/product_sans_regular"
                    android:textColor="@color/profileEditTextColor"
                    android:textSize="@dimen/_10sdp"
                    android:layout_weight="0.5" />
            </TableRow>


        </TableLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/imgView"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_35sdp"
                android:layout_gravity="center"
                android:fontFamily="@font/product_sans_regular"
                android:textColor="@color/profileEditTextColor" />


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center|end"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_travel_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:paddingRight="@dimen/_4sdp"
                    android:textSize="@dimen/_8sdp"
                    android:fontFamily="@font/product_sans_regular"
                    android:textColor="@color/profileEditTextColor"
                    />

            </FrameLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lineylayouAddRemove"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tv_create_on"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center|start"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:paddingLeft="@dimen/_2sdp"
                android:textSize="@dimen/_8sdp"
                android:fontFamily="@font/product_sans_regular"
                android:textColor="@color/profileEditTextColor"
                />


            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chip_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/_8sdp"
                android:paddingRight="@dimen/_8sdp"
                android:layout_gravity="end"
                app:singleLine="true">

                <com.google.android.material.chip.Chip
                    android:id="@+id/approve_order"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Approve"
                    android:textColor="@color/colorPrimary"
                    app:chipBackgroundColor="@color/gray4"
                    app:chipIcon="@drawable/approve_order_icon"
                    android:clickable="true"
                    app:chipStartPadding="@dimen/_5sdp"
                    app:chipEndPadding="@dimen/_5sdp"
                    app:rippleColor="@color/chip_ripple">

                </com.google.android.material.chip.Chip>

                <com.google.android.material.chip.Chip
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:id="@+id/reject_order"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reject"
                    android:textColor="@color/my_app_error_color"
                    app:chipBackgroundColor="@color/gray4"
                    app:chipIcon="@drawable/approve_order_reject_icon"
                    android:clickable="true"
                    app:chipStartPadding="@dimen/_5sdp"
                    app:chipEndPadding="@dimen/_5sdp"
                    app:chipIconTint="@color/my_app_error_color"
                    app:rippleColor="@color/chip_ripple">
                </com.google.android.material.chip.Chip>
            </com.google.android.material.chip.ChipGroup>


        </LinearLayout>
    </LinearLayout>
</LinearLayout>

