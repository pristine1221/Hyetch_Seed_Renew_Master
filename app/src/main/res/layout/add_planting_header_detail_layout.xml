<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@color/my_app_background_color"
            android:elevation="5dp"
            app:cardCornerRadius="3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/_5sdp">

                    <LinearLayout
                        android:id="@+id/back_button_go_topreviousPage"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@drawable/green_back_arrow" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_header_title_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:fontFamily="@font/product_sans_bold"
                        android:maxLines="1"
                        android:paddingTop="@dimen/_5sdp"
                        android:paddingBottom="@dimen/_5sdp"
                        android:text="Planting Detail :"
                        android:textColor="@color/black"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_header_no"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:fontFamily="@font/product_sans_bold"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_8sdp" />


                    <com.google.android.material.chip.ChipGroup
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="4dp">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/complete_header"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:elevation="2dp"
                            android:fontFamily="@font/product_sans_regular"
                            android:gravity="center"
                            android:text="Complete"
                            android:textColor="@color/colorPrimary"
                            android:textStyle="bold"
                            android:visibility="gone"
                            app:chipBackgroundColor="@color/my_app_background_color"
                            app:chipIcon="@drawable/ic_baseline_done_all_24"
                            app:chipIconTint="@color/colorPrimary"
                            app:chipStrokeColor="@color/chip_border"
                            app:chipStrokeWidth="1dp"
                            app:rippleColor="@color/chip_ripple"></com.google.android.material.chip.Chip>

                    </com.google.android.material.chip.ChipGroup>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_3sdp"
                    android:layout_weight="1"
                    android:background="@color/gray4"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imageView">
                </View>

                <me.zhanghai.android.materialprogressbar.MaterialProgressBar
                    android:id="@+id/content_loading"
                    style="@style/Widget.MaterialProgressBar.ProgressBar.Horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/_11sdp"
                    android:indeterminate="true"
                    android:visibility="gone"
                    android:layout_gravity="center"
                    android:indeterminateTint="@color/colorPrimary"
                    app:mpb_progressStyle="horizontal" />

              <!--  <ProgressBar
                    android:id="@+id/loading_content"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_gravity="center"
                    android:indeterminateTint="@color/text_color_hint"
                    android:layout_height="@dimen/_20sdp"/>-->

                <LinearLayout
                    android:id="@+id/header_create_section"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <androidx.core.widget.NestedScrollView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:fillViewport="true"
                        android:layout_weight="1">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="10dp">

                            <com.google.android.material.textfield.TextInputLayout
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="4dp"
                                android:layout_weight="1"
                                android:id="@+id/select_season_layout"
                                android:hint="Select loc. center"
                                app:boxCornerRadiusBottomEnd="15dp"
                                app:boxCornerRadiusTopStart="15dp">


                                <AutoCompleteTextView
                                    android:id="@+id/ac_select_loc"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:editable="false"
                                    android:inputType="none"
                                    android:textColor="@color/black"
                                    android:maxLines="1" />

                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="4dp"
                                android:hint="Date"
                                android:id="@+id/date_input_layout"
                                android:layout_below="@+id/select_season_layout"
                                app:boxCornerRadiusBottomEnd="15dp"
                                app:boxCornerRadiusTopStart="15dp">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/ed_date"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:drawableRight="@drawable/ic_baseline_today_24"
                                    android:drawableTint="@color/colorPrimary"
                                    android:maxLines="1" />
                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="4dp"
                                android:hint="Date Of Harvest"
                                app:boxCornerRadiusBottomEnd="15dp"
                                android:id="@+id/date_of_harvest"
                                android:layout_below="@+id/date_input_layout"
                                app:boxCornerRadiusTopStart="15dp">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/ed_date_of_harvest"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:drawableRight="@drawable/ic_baseline_today_24"
                                    android:drawableTint="@color/colorPrimary"
                                    android:editable="false"
                                    android:maxLines="1" />

                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="4dp"
                                android:layout_weight="1"
                                android:layout_below="@+id/date_of_harvest"
                                android:hint="Select Season"
                                android:id="@+id/select_doc_input_layout"
                                app:boxCornerRadiusBottomEnd="15dp"
                                app:boxCornerRadiusTopStart="15dp">

                                <AutoCompleteTextView
                                    android:id="@+id/dropdown_sesion_code"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:inputType="none"
                                    android:editable="false"
                                    android:textColor="@color/black"
                                    android:maxLines="1" />

                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="4dp"
                                android:layout_weight="1"
                                android:layout_below="@+id/select_doc_input_layout"
                                android:hint="Search Organiser"
                                android:id="@+id/organser_input_layout"
                                app:startIconDrawable="@drawable/ic_search_black_24dp"
                                app:startIconTint="@color/color_trans_gray"
                                app:boxCornerRadiusBottomEnd="15dp"
                                app:boxCornerRadiusTopStart="15dp">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/ac_org_name"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:textColor="@color/black"
                                    android:maxLines="1" />

                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.card.MaterialCardView
                                android:id="@+id/frame_layout_org_list"
                                android:layout_below="@+id/organser_input_layout"
                                android:elevation="5dp"
                                android:visibility="gone"
                                android:layout_width="match_parent"
                                android:layout_marginLeft="5dp"
                                app:cardElevation="@dimen/_5sdp"
                                android:layout_marginRight="5dp"
                                app:cardBackgroundColor="@color/colorWhite"
                                app:rippleColor="@color/chip_ripple"
                                app:cardCornerRadius="@dimen/_5sdp"
                                app:strokeWidth="@dimen/_1sdp"
                                app:strokeColor="@color/gray1"
                                android:layout_height="wrap_content">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:orientation="vertical"
                                    android:background="@color/colorWhite"
                                    android:layout_height="wrap_content">
                                    <ProgressBar
                                        android:id="@+id/loading_item"
                                        android:layout_width="30dp"
                                        android:visibility="gone"
                                        android:indeterminateTint="@color/chip_ripple"
                                        android:layout_gravity="center|top"
                                        android:layout_height="30dp"/>

                                    <androidx.recyclerview.widget.RecyclerView
                                        android:id="@+id/lv_cust_dist_list"
                                        android:layout_width="match_parent"
                                        android:layout_marginTop="@dimen/_5sdp"
                                        android:layout_marginBottom="@dimen/_10sdp"
                                        android:scrollbars="none"
                                        android:divider="@null"
                                        android:nestedScrollingEnabled="false"
                                        android:background="@color/colorWhite"
                                        android:layout_height="wrap_content"/>
                                </LinearLayout>

                            </com.google.android.material.card.MaterialCardView>

                            <com.google.android.material.textfield.TextInputLayout
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="4dp"
                                android:hint="Doc. SubType"
                                android:id="@+id/doc_sub_type"
                                android:layout_below="@+id/organser_input_layout"
                                app:boxCornerRadiusBottomEnd="15dp"
                                app:boxCornerRadiusTopStart="15dp">

                                <AutoCompleteTextView
                                    android:id="@+id/ac_doc_sub_type"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:inputType="none"
                                    android:editable="false"
                                    android:textColor="@color/black"
                                    android:maxLines="1" />

                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="4dp"
                                android:layout_weight="1"
                                android:layout_below="@+id/doc_sub_type"
                                android:hint="Stage code"
                                android:id="@+id/stage_code_input_layout"
                                app:boxCornerRadiusBottomEnd="15dp"
                                app:boxCornerRadiusTopStart="15dp">

                                <AutoCompleteTextView
                                    android:id="@+id/ac_stage_code"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:inputType="none"
                                    android:editable="false"
                                    android:textColor="@color/black"
                                    android:maxLines="1" />

                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="4dp"
                                android:hint="Total Sowing Area(acrs)"
                                android:id="@+id/total_sowing_area_input_layout"
                                android:layout_below="@+id/stage_code_input_layout"
                                app:boxCornerRadiusBottomEnd="15dp"
                                app:boxCornerRadiusTopStart="15dp">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/ed_total_sowing_area"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:editable="false"
                                    android:text="0"
                                    android:enabled="false"
                                    android:inputType="numberDecimal"
                                    android:maxLines="1" />

                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="4dp"
                                android:hint="Total Land (acres)"
                                android:id="@+id/total_land_layout"
                                android:layout_below="@+id/total_sowing_area_input_layout"
                                app:boxCornerRadiusBottomEnd="15dp"
                                app:boxCornerRadiusTopStart="15dp">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/ed_total_land_acres"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:editable="false"
                                    android:enabled="false"
                                    android:text="0"
                                    android:inputType="numberDecimal"
                                    android:maxLines="1" />

                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="4dp"
                                android:layout_weight="1"
                                android:hint="Parent Type"
                                android:id="@+id/parent_type"
                                android:layout_below="@+id/total_land_layout"
                                app:boxCornerRadiusBottomEnd="15dp"
                                app:boxCornerRadiusTopStart="15dp">

                                <AutoCompleteTextView
                                    android:id="@+id/drop_down_parent"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:inputType="none"
                                    android:editable="false"
                                    android:textColor="@color/black"
                                    android:maxLines="1" />

                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="4dp"
                                android:layout_weight="1"
                                android:hint="Type"
                                android:id="@+id/type_layout"
                                android:layout_below="@+id/parent_type"
                                android:visibility="visible"
                                app:boxCornerRadiusBottomEnd="15dp"
                                app:boxCornerRadiusTopStart="15dp">

                                <AutoCompleteTextView
                                    android:id="@+id/ac_type"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:inputType="none"
                                    android:editable="false"
                                    android:textColor="@color/black"
                                    android:maxLines="1" />

                            </com.google.android.material.textfield.TextInputLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:layout_below="@+id/type_layout"
                                android:layout_alignParentBottom="true"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_marginBottom="@dimen/_10sdp"
                                android:orientation="horizontal">

                                <Button
                                    android:id="@+id/view_header_detail"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:backgroundTint="@color/white_chip_border"
                                    android:elevation="2dp"
                                    android:fontFamily="@font/product_sans_regular"
                                    android:text="View Header Detail"
                                    android:textAllCaps="false"
                                    android:textColor="@color/colorPrimaryDark"
                                    android:visibility="gone"
                                    app:rippleColor="@color/chip_ripple" />


                                <Button
                                    android:id="@+id/create_header_btn"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/_5sdp"
                                    android:layout_weight="1"
                                    android:elevation="2dp"
                                    android:fontFamily="@font/product_sans_regular"
                                    android:text="Save Header"
                                    android:textAllCaps="false"
                                    android:textColor="@color/white_chip_border"
                                    android:textStyle="bold"
                                    app:rippleColor="@color/chip_ripple"/>

                            </LinearLayout>

                        </RelativeLayout>

                    </androidx.core.widget.NestedScrollView>
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/planting_detail_header_section"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp">

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="2dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/product_sans_bold"
                                android:text="Plant No : "
                                android:textColor="@color/profileEditTextColor"
                                android:textSize="13sp" />

                            <TextView
                                android:id="@+id/tv_palnting_no"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/product_sans_regular"
                                android:textColor="@color/black"
                                android:textSize="13sp" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/product_sans_bold"
                                android:text="Date :"
                                android:textColor="@color/profileEditTextColor"
                                android:textSize="13sp" />

                            <TextView
                                android:id="@+id/tv_date"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/product_sans_regular"
                                android:textColor="@color/black"
                                android:textSize="13sp" />

                        </TableRow>

                        <TableRow android:padding="2dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/product_sans_bold"
                                android:text="Season :"
                                android:textColor="@color/profileEditTextColor"
                                android:textSize="13sp" />

                            <TextView
                                android:id="@+id/tv_season_code"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/product_sans_regular"
                                android:textColor="@color/black"
                                android:textSize="13sp" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/product_sans_bold"
                                android:text="Stage code : "
                                android:textColor="@color/profileEditTextColor"
                                android:textSize="13sp" />

                            <TextView
                                android:id="@+id/tv_stage_code"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/product_sans_regular"
                                android:textColor="@color/black"
                                android:textSize="13sp" />

                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="2dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/product_sans_bold"
                                android:text="Doc.SubType : "
                                android:textColor="@color/profileEditTextColor"
                                android:textSize="13sp" />

                            <TextView
                                android:id="@+id/tv_doc_subtype"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/product_sans_regular"
                                android:textColor="@color/black"
                                android:textSize="13sp" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/product_sans_bold"
                                android:text="Parent typ : "
                                android:textColor="@color/profileEditTextColor"
                                android:textSize="13sp" />

                            <TextView
                                android:id="@+id/tv_parent_type"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/product_sans_regular"
                                android:textColor="@color/black"
                                android:textSize="13sp" />
                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="2dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/product_sans_bold"
                                android:text="Land(acr) :"
                                android:textColor="@color/profileEditTextColor"
                                android:textSize="13sp" />

                            <TextView
                                android:id="@+id/land_acr"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="0"
                                android:fontFamily="@font/product_sans_regular"
                                android:textColor="@color/black"
                                android:textSize="13sp" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/product_sans_bold"
                                android:text="Sowing(acr): "
                                android:textColor="@color/profileEditTextColor"
                                android:textSize="13sp" />

                            <TextView
                                android:id="@+id/tv_sowing_acr_type"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="0"
                                android:fontFamily="@font/product_sans_regular"
                                android:textColor="@color/black"
                                android:textSize="13sp" />
                        </TableRow>
                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="2dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/product_sans_bold"
                                android:text="Org. code : "
                                android:textColor="@color/profileEditTextColor"
                                android:textSize="13sp" />

                            <TextView
                                android:id="@+id/tv_org_code"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="0"
                                android:fontFamily="@font/product_sans_regular"
                                android:textColor="@color/black"
                                android:textSize="13sp" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/product_sans_bold"
                                android:text="Org. Name : "
                                android:textColor="@color/profileEditTextColor"
                                android:textSize="13sp" />

                            <TextView
                                android:id="@+id/tv_org_name"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="0"
                                android:fontFamily="@font/product_sans_regular"
                                android:textColor="@color/black"
                                android:textSize="13sp" />
