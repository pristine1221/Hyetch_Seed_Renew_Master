<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <FrameLayout
            android:id="@+id/circuler_text_land_selection"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:elevation="2dp"
            android:padding="5dp"
            android:layout_margin="2dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/circle_yellow_icon">

            <TextView
                android:id="@+id/tv_character_ofImageView_land_selection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/my_app_background_color"
                android:textSize="25dp"/>

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:paddingTop="7dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/land_code_land_selection"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/product_sans_bold"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/total_rows_land_selection"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:fontFamily="@font/product_sans_regular"
                    android:layout_marginRight="5dp"
                    android:textSize="8sp" />
            </LinearLayout>


<!--            <RelativeLayout-->
<!--                android:id="@+id/lineylayouAddRemoves"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:gravity="right|bottom|end"-->
<!--                android:orientation="horizontal">-->


<!--            </RelativeLayout>-->
            <TextView
                android:id="@+id/block_name_land_selection"
                android:layout_width="wrap_content"
                android:fontFamily="@font/product_sans_regular"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/remark_land_selection"
                android:layout_width="wrap_content"
                android:fontFamily="@font/product_sans_regular"
                android:layout_height="wrap_content" />

            <RelativeLayout
                android:id="@+id/lineylayouAddRemove"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right|bottom|end"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/dist_date_time_land_selection"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="bottom|end"
                    android:fontFamily="@font/product_sans_regular"
                    android:layout_marginRight="5dp"
                    android:textSize="@dimen/_10sdp" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
