<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@color/my_app_background_color"
    android:elevation="5dp"
    app:cardCornerRadius="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/profileAccentColor"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/product_sans_bold"
                    android:padding="6dp"
                    android:text="EMPID : "
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/tv_emp_id"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/product_sans_bold"
                    android:lines="1"
                    android:layout_weight="1"
                    android:textColor="@color/profileEditTextColor"
                    android:textSize="12dp" />


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/product_sans_bold"
                    android:padding="6dp"
                    android:text="Action:"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:textSize="15dp" />

                <ImageView
                    android:id="@+id/approve_edit"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:src="@drawable/ic_baseline_edit_24" />
            </LinearLayout>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="#72AAAAAA"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView">

        </View>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray4">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/my_app_background_color"
                android:paddingLeft="8dp"
                android:paddingTop="10dp"
                android:paddingRight="8dp"
                android:paddingBottom="10dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/product_sans_bold"
                    android:text="Start date: "
                    android:textColor="@color/black"
                    android:textSize="13dp">

                </TextView>

                <TextView
                    android:id="@+id/tv_start_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/product_sans_regular"
                    android:paddingLeft="5dp"
                    android:textColor="@color/profileEditTextColor"
                    android:textSize="12dp">

                </TextView>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/product_sans_bold"
                    android:paddingLeft="5dp"
                    android:text="End Date:"
                    android:textColor="@color/black"
                    android:textSize="13dp">

                </TextView>

                <TextView
                    android:id="@+id/tv_end_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/product_sans_regular"
                    android:paddingLeft="5dp"
                    android:textColor="@color/profileEditTextColor"
                    android:textSize="12dp">

                </TextView>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:background="@color/my_app_background_color"
                android:paddingLeft="8dp"
                android:paddingTop="10dp"
                android:paddingRight="8dp"
                android:paddingBottom="10dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/product_sans_bold"
                    android:text="Type:"
                    android:textColor="@color/black"
                    android:textSize="13dp">

                </TextView>

                <TextView
                    android:id="@+id/tv_type"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/product_sans_regular"
                    android:paddingLeft="5dp"
                    android:textColor="@color/profileEditTextColor"
                    android:textSize="12dp">

                </TextView>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/product_sans_bold"
                    android:text="leave id:"
                    android:textColor="@color/black"
                    android:textSize="13dp">

                </TextView>

                <TextView
                    android:id="@+id/tv_leave_id"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/product_sans_regular"
                    android:paddingLeft="5dp"
                    android:textColor="@color/profileEditTextColor"
                    android:textSize="12dp">

                </TextView>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:background="@color/my_app_background_color"
                android:paddingLeft="8dp"
                android:paddingTop="10dp"
                android:paddingRight="8dp"
                android:paddingBottom="10dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/product_sans_bold"
                    android:text="Reason:"
                    android:textColor="@color/black"
                    android:textSize="13dp">

                </TextView>

                <TextView
                    android:id="@+id/tv_reason"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:fontFamily="@font/product_sans_regular"
                    android:paddingLeft="5dp"
                    android:textColor="@color/profileEditTextColor"
                    android:textSize="12dp">

                </TextView>
            </TableRow>


            <TableRow
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:background="@color/my_app_background_color"
                android:paddingLeft="8dp"
                android:paddingTop="10dp"
                android:paddingRight="8dp"
                android:visibility="gone"
                android:paddingBottom="10dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/product_sans_bold"
                    android:text="Action:"
                    android:textColor="@color/black"
                    android:textSize="13dp">

                </TextView>

                <ImageView
                    android:id="@+id/approve_edit1"
                    android:layout_width="30dp"
                    android:layout_height="20dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:src="@drawable/ic_baseline_edit_24"/>
            </TableRow>
        </TableLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>

