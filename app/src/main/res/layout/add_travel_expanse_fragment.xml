<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp"
        android:orientation="vertical">


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:paddingTop="@dimen/_10sdp"
            android:paddingBottom="@dimen/_10sdp"
            android:paddingLeft="@dimen/_5sdp"
            android:paddingRight="@dimen/_10sdp"
            android:layout_height="wrap_content">

            <com.google.android.material.chip.Chip
                android:id="@+id/add_expence_back_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="2dp"
                app:chipBackgroundColor="@color/my_app_background_color"
                app:chipIcon="@drawable/close_select_ripple_img"
                app:chipIconTint="@color/colorPrimary"
                app:chipStrokeColor="@color/chip_border"
                app:chipStrokeWidth="1dp"
                app:textStartPadding="0dp"
                app:rippleColor="@color/chip_ripple"
                app:textEndPadding="0dp"
                app:chipStartPadding="4dp"
                app:chipEndPadding="4dp"/>

            <LinearLayout
                android:layout_width="0dp"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Add Expense"
                    android:layout_marginLeft="@dimen/_4sdp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:fontFamily="@font/product_sans_bold"
                    android:textColor="@color/dark_gray"
                    android:textSize="@dimen/_15sdp"
                    android:layout_height="wrap_content">
                </TextView>

                <TextView
                    android:id="@+id/travel_header_no"
                    android:layout_marginLeft="@dimen/_4sdp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:fontFamily="@font/product_sans_regular"
                    android:textColor="@color/dark_gray"
                    android:textSize="@dimen/_15sdp"
                    android:layout_height="wrap_content">
                </TextView>

            </LinearLayout>

            <com.google.android.material.chip.Chip
                android:id="@+id/add_expenseButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:chipIconTint="@color/colorPrimaryDark"
                android:fontFamily="@font/product_sans_bold"
                android:textSize="@dimen/_9sdp"
                app:strokeColor="@color/chip_border"
                app:strokeWidth="@dimen/_1sdp"
                android:textAllCaps="false"
                app:rippleColor="@color/chip_ripple"
                app:chipStrokeWidth="@dimen/_1sdp"
                android:textColor="@color/colorPrimaryDark"
                app:chipStrokeColor="@color/chip_ripple"
                app:chipBackgroundColor="@color/my_app_background_color"
                android:textAppearance="@style/chipText"
                app:chipStartPadding="4dp"
                app:chipEndPadding="4dp"
                app:chipIconSize="@dimen/_15sdp"
                app:chipMinHeight="@dimen/_30sdp"
                android:text="Add Expense"/>
        </LinearLayout>

